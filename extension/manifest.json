{
  "manifest_version": 3,
  "name": "Wywiad+ Claude Connector",
  "version": "1.1",
  "description": "Automatycznie pobiera session key z Claude dla aplikacji Wywiad+",
  "permissions": ["cookies", "management", "storage"],
  "host_permissions": ["https://claude.ai/*", "http://localhost:8089/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://claude.ai/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "48": "icon.png",
    "128": "icon.png"
  }
}
